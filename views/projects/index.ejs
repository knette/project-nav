<a href="/projects/new">
<div class="card" style="width: 30%; height: 185px;">
    <div class="card-body" style="margin-top: 45px;">
        <h5 class="card-title text-center"><i class="fa fa-plus" id ="plus"></i></h5>
    </div>
</div></a>

<% projects.forEach((p)=>{ %>
<% if (p.user.toString() === currentUser._id.toString()) { %>
    <div class="card" style="width: 30%;">
        <img class="card-img-top" src= <%= p.imageUrl %> alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><%= p.name %></h5>
            <p class="card-text"><%=  p.description.substring(45,0) %><% if(p.description.length > 45){ %>...<% } %></p>
            <a href="/projects/<%= p._id%>" class="btn btn-primary card-button">View Project</a>
        </div>
    </div>
    <% } %>
<% }) %>